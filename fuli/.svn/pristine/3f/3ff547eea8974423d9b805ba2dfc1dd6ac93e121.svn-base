<#include "../inc/layout.html"> <@layout title="文章类别">
<div class="nav">
	<ul class="cc">
		<li class="current"><a href="${root!}/artcate/list">文章类别</a></li>
		<li><a href="${root!}/artcate/edit">添加文章类别</a></li>
	</ul>
</div>
<form class="J_ajaxForm" action="${root!}/artcate/list" method="post">
	<div class="table_list">
		<table width="100%">
			<colgroup>
				<col width="80">
				<col width="100">
				<col>
				<col width="80">
				<col width="200">
			</colgroup>
			<thead>
				<tr>
					<td>ID</td>
					<td>名称</td>
					<td>操作</td>
				</tr>
			</thead>
			<tbody>
			<#assign status=['
				<font color="red">×</font>','
				<font color="green">√</font>']>
				<#list page.list as u>
				 <#if ((u.pid)!0)!=0>
				 <#else>
				 <tr>
					<td align='center'>${(u.id)!}</td>
					<td>${(u.name)!}</td>
					<td class="text-c">
					<a href="${root!}/article/edit/?artcate=${u.id}">添加文章</a>|
					<a href="${root!}/artcate/edit/${u.id}">修改</a>|
					<a class="J_ajax_del" href="${root!}/artcate/del/${u.id}">删除</a></td>
				</tr>
					<#list page.list as u1>
						<#if (u1.pid)??&& u1.pid==u.id>
						<tr>
							<td align='center'>${(u1.id)!}</td>
							<td>&nbsp;&nbsp;&nbsp;└─${(u1.name)!}</td>
							<td class="text-c">
<#-- 							<a href="${root!}/article/edit/?artcate=${u.id}">添加文章</a>| -->
							<a href="${root!}/artcate/edit/${u1.id}">修改</a>|
							<a class="J_ajax_del" href="${root!}/artcate/del/${u1.id}">删除</a></td>
						</tr>
						</#if>
					</#list>
				</#if>
				</#list>
			</tbody>
		</table>
		<div class="p10"><@paginate
			action="/artcate/list" pageNo=pageNo totalPage=page.totalPage!0
			totalCount=page.totalRow!0/></div>
	</div>
</form>
</@layout>
