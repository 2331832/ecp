<#include "../inc/layout.html"> 
<@layout title="角色">
<div class="h_a">角色信息</div>
		<form class="J_ajaxForm" action="${root!}/role/save" method="post" id="myform">
		<input type="hidden" name="id" value="${(po.id)!}">
			<div class="table_full">
				<table width="100%">
					<tr>
						<th width="100">角色名称</th>
						<td><input type="text" name="name" value="${(po.name)!}" class="input"
							id="rolename"></input><span class="must_red">*</span></td>
					</tr>
					<tr>
						<th>角色描述</th>
						<td><textarea name="remark" rows="2" cols="20" id="remark" class="inputtext" style="height: 100px; width: 500px;">${(po.remark)!}</textarea></td>
					</tr>
					<tr>
						<th>是否启用</th>
						<td><label><input type="radio" name="status" value="1" <#if ((po.status)!1)==1 >checked</#if>>启用</label>
							&nbsp;&nbsp;&nbsp;&nbsp;
							<label><input type="radio" name="status" value="0" <#if ((po.status)!1) ==0 >checked</#if>>禁止
						</label></td>
					</tr>
				</table>
			</div>
			<div class="btn_wrap">
				<div class="btn_wrap_pd">
					<button class="btn btn_submit mr10 J_ajax_submit_btn" type="submit"><#if (po.id)??>修改<#else>添加</#if></button>
					<a class="btn" href="${root!}/role/list">返回</a>
				</div>
			</div>
		</form>
</@layout>