<#include "../inc/layout.html"> <@layout title="系统回复">
<#assign typ=typ!'-1'>
<#if typ==''><#assign typ=-1></#if>
<#assign typ=(typ!'-1')?number>
<div class="nav">
	<ul class="cc">
		<li class="current"><a href="${root!}/wxanswer/sys">系统回复</a></li>
		<li><a href="${root!}/wxanswer/edit">添加回复</a></li>
	</ul>
</div>
<form method="post"
	action="${root!}/wxanswer/sys?qryField=nickname$like,phone$like,uname$like,typ">
	<div class="table_list">
		<div class="p10"><@paginate
			action="/wxanswer/sys" pageNo=pageNo totalPage=page.totalPage!0
			totalCount=page.totalRow!0/></div>
		<table width="100%">
			<thead>
				<tr>
					<td width="150px">KEY</td>
					<td>内容</td>
					<td width="100px">操作</td>
				</tr>
			</thead>
			<tbody>
				<#list page.list as u>
				<tr>
					<td>${(u.key)!}</td>
					<td>${(u.value)!}</td>
					<td class="text-c">
						<a href="${root!}/wxanswer/edit/${u.id}">修改</a>|
						<a class="J_ajax_del" href="${root!}/wxanswer/del/${u.id}" msg="<br>删除将会影响系统的正常运行！请谨慎！">删除</a>
					</td>
				</tr>
				</#list>
			</tbody>
		</table>
		<div class="p10"><@paginate
			action="/wxanswer/sys" pageNo=pageNo totalPage=page.totalPage!0
			totalCount=page.totalRow!0/></div>
		<div class="btn_wrap">
			<div class="btn_wrap_pd">
				<a href="javascript:update();" class="btn btn_submit mr10">更新</a>
			</div>
		</div>
	</div>
</form>
<script>
	function update() {
		if (confirm("确定要更新回复列表吗？")) {
			$.ajax({
				url : '${root!}/wxanswer/reset',
				dataType : 'json',
				success : function(j) {
					alert(j.msg);
					if(j.success){
						window.location.reload();
					}
				}
			});
		}
	}
</script>
</@layout>
