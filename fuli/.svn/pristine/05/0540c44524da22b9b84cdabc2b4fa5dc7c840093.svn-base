<#include "../inc/layout.html"> <@layout title="角色">
<div class="nav">
	<ul class="cc">
		<li class="current"><a href="${root!}/role/list">角色管理</a></li>
		<li><a href="${root!}/role/edit">添加角色</a></li>
	</ul>
</div>
<div class="table_list">
	<form name="myform" action="${root!}/role/list" method="post">
		<table width="100%" cellspacing="0">
			<thead>
				<tr>
					<td width="30">ID</td>
					<td align="left">角色名称</td>
					<td align="left">角色描述</td>
					<td width="40" align="left">状态</td>
					<td width="200">管理操作</td>
				</tr>
			</thead>
			<tbody>
				<#assign status=['
				<font color="red">×</font>','
				<font color="green">√</font>']>
				<#list page.list as u>
				<tr>
					<td align='center'>${(u.id)!}</td>
					<td>${(u.name)!}</td>
					<td>${(u.remark)!}</td>
					<td>${status[(u.status)!0]}</td>
					<td class="text-c"><#--<a
						href="${root!}/role/authorize/${u.id}">权限设置</a>|--> <a
						href="javascript:open_iframe_dialog('${root!}/user/list?qryField=role_id&role_id=${u.id}','成员管理');">成员管理</a>|
						<a href="${root!}/role/edit/${u.id}">修改</a> | <a
						class="J_ajax_del" href="${root!}/role/del/${u.id}">删除</a></td>
				</tr>
				</#list>
			</tbody>
		</table>
		<div class="p10"><@paginate
			action="/role/list" currentPage=pageNo totalPage=page.totalPage!0
			totalCount=page.totalCount!0/></div>
	</form>
</div>
</@layout>
