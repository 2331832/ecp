<#include "../inc/layout.html"> 
<@layout title="微信菜单--关联信息">
		<div class="common-form">
			<form method="post" class="J_ajaxForm" action="${root!}/wxmenuDetail/save" enctype="multipart/form-data">
				<input type="hidden" name="id" value="${(po.id)!}">
				<input type="hidden" name="keywd" value="${(po.keywd)!keywd}">
				<input type="hidden" name="flag" value="text">
				<div class="h_a">微信菜单--关联信息</div>
				<div class="table_list">
				<fieldset>
				<legend>说明</legend>
				<div>1、每个菜单中最多只能添加一条关联信息<br><br>
					 2、关联标记对应的是短信管理中的标记值<br><br>
					 3、若不关联则必须设为：qita（其它）<br>
				</div>
				</fieldset>
					<table cellpadding="0" cellspacing="0" class="table_form" width="100%">
						<tbody>
							<tr>
								<td width="200">标题:</td>
								<td><input class="input" type="text" name="title" value="${(po.title)!'qita'}" readonly="readonly"></td>
							</tr>
							<tr>
								<td width="200">内容:</td>
								<td><textarea class="input" name="conts" style="width:300px;height:400px;">${(po.conts)!}</textarea></td>
							</tr>
							<tr>
								<td width="200">排序:</td>
								<td><input type="text" class="input" name="sort" value="${(po.sort)!1}"></td>
							</tr>
						</tbody>
					</table>
				</div>
				<div class="btn_wrap">
					<div class="btn_wrap_pd">
						<button class="btn btn_submit mr10 J_ajax_submit_btn"
							type="submit"><#if (po.id)??>修改<#else>添加</#if></button>
						<a class="btn" href="${root!}/wxmenuDetail/list?qryField=keywd&keywd=${keywd}">返回</a>
					</div>
				</div>
			</form>
		</div>
 ·</@layout>