<#include "../inc/layout.html"> 
<@layout title="修改密码">
		<div class="nav">
			<ul class="cc">
				<li class="current"><a href="#">发送消息</a></li>
			</ul>
		</div>
		<div class="common-form">
			<form method="post" class="J_ajaxForm"
				action="${root!}/wxuser/sendMsg">
				<input type="hidden" name="openid" value="${openid}">
				<div class="h_a">粉丝信息</div>
				<div class="table_list">
					<table cellpadding="0" cellspacing="0" class="table_form" width="100%">
						<tbody>
							<tr>
								<th width="10%">粉丝:</th>
								<td width="90%"><img src="${(headimgurl)!}" height="35px;" name="msg">${nickname!}</td>
							</tr>
							<tr>
								<th>消息:</th>
								<td><textarea rows="5" style="width:100%;"></textarea></td>
							</tr>
						</tbody>
					</table>
				</div>
				<div class="">
					<div class="btn_wrap_pd">
						<button class="btn btn_submit mr10 J_ajax_submit_btn" type="submit">发送</button>
					</div>
				</div>
			</form>
		</div>
 ·</@layout>