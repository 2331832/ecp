<#include "../inc/layout.html"> <@layout title="微信菜单">
<div class="nav">
	<ul class="cc">
		<li class="current">微信关注用户</li>
	</ul>
</div>
<form class="J_ajaxForm" action="${root!}/wxuser/list" method="post">
	<div class="table_list">
		<table width="100%">
			<colgroup>
				<col width="80">
				<col width="100">
				<col>
				<col width="80">
				<col width="200">
			</colgroup>
			<thead>
				<tr class="">
					<td class="bold">昵称</td>
					<td class="bold">头像</td>
					<td class="bold">性别</td>
					<td class="bold">关注时间</td>
					<td class="bold">省</td>
					<td class="bold">市</td>
				</tr>
			</thead>
			<tbody>
			<#assign sex=["未知","男","女"]>
				<#list page.list as u>
				<tr>
					<td align='center'>${(u.nicename)!}</td>
					<td><img src="${(u.headimgurl)!}" height="40px;"></td>
					<td>${sex[(u.sex)!0]}</td>
					<td>${(u.subscribe_time)!}</td>
					<td>${(u.province)!}</td>
					<td>${(u.city)!}</td>
					<td class="text-c">
						<a class="J_ajax_del" href="${root!}/wxuser/del/${u.id}">删除</a></td>
				</tr>
				</#list>
			</tbody>
		</table>
		<div class="p10"><#include "../inc/page.html"> <@paginate
			action="/wxuser/list" currentPage=pageNo totalPage=page.totalPage!0
			totalCount=page.totalCount!0/></div>
		<div class="btn_wrap">
			<div class="btn_wrap_pd">
				<a href="javascript:createMenu();" class="btn btn_submit mr10">获取用户列表</a>
			</div>
		</div>
	</div>
</form>
<script>
	function createMenu() {
		if (confirm("确定要获取用户列表吗？")) {
			$.ajax({
				url : '${root!}/wxuser/getUserList',
				dataType : 'json',
				success : function(j) {
					alert(j.msg);
				}
			});
		}
	}
</script>
</@layout>
