<#include "../inc/layout.html"> <@layout title="微信菜单">
<div class="nav">
	<ul class="cc">
		<li class="current">微信关注用户</li>
	</ul>
</div>
<div class="h_a">搜索</div>
<form method="post"
	action="${root!}/wxuser/list?qryField=ctime$le,ctime$ge,login$like">
	<div class="search_type cc mb10">
		<div class="mb10">
			<span class="mr20">时间： <input type="text" name="ctime$ge"
				class="input length_2 J_date date"
				value="${(request.getParameter('ctime$ge'))!}" style="width: 80px;"
				autocomplete="off">- <input type="text"
				class="input length_2 J_date date" name="ctime$le"
				value="${(request.getParameter('ctime$le'))!}" style="width: 80px;"
				autocomplete="off"> &nbsp; &nbsp;用户名： <input type="text"
				class="input length_2" name="login$like" style="width: 200px;" value="${(request.getParameter("login$like"))!}"
				placeholder="请输入用户名..."><input type="submit" class="btn"
				value="搜索"></span>
		</div>
	</div>
</form>
<form class="J_ajaxForm" action="${root!}/wxuser/list" method="post">
	<div class="table_list">
		<table width="100%">
			<colgroup>
				<col width="80">
				<col width="100">
				<col>
				<col width="80">
				<col width="200">
			</colgroup>
			<thead>
				<tr class="">
					<td class="bold">昵称</td>
					<td class="bold">头像</td>
					<td class="bold">性别</td>
					<td class="bold">购买次数</td>
					<td class="bold">购买金额(元)</td>
					<td class="bold">已返利(元)</td>
					<td class="bold">酒帮成员</td>
					<td class="bold">关注时间</td>
					<td class="bold">省</td>
					<td class="bold">市</td>
					<td class="bold">操作</td>
				</tr>
			</thead>
			<tbody>
			<#assign sex=["未知","男","女"]>
			<#assign jbm=["无","帮成员","帮主"]>
				<#list page.list as u>
				<tr>
					<td>${(u.nickname)!}</td>
					<td align='center'><img src="${(u.headimgurl)!}" height="40px;"></td>
					<td>${sex[(u.sex)!0]}</td>
					<td>${(u.shopcount)!0}</td>
					<td>${((u.amt)!0)?string('#,##0.00')}</td>
					<td>${((u.fl)!0)?string('#,##0.00')}</td>
					<td>${jbm[(u.jbm)!0]}</td>
					<td>${TextUtil.fromInt(u.subscribe_time)?string("yyyy-MM-dd HH:mm:ss")}</td>
					<td>${(u.province)!}</td>
					<td>${(u.city)!}</td>
					<td class="text-c">
						<a class="J_ajax_del" href="${root!}/wxuser//${u.id}">查消息</a>|
						<a class="J_ajax_del" href="${root!}/wxuser//${u.id}">发消息</a></td>
				</tr>
				</#list>
			</tbody>
		</table>
		<div class="p10"><#include "../inc/page.html"> <@paginate
			action="/wxuser/list" currentPage=pageNo totalPage=page.totalPage!0
			totalCount=page.totalCount!0/></div>
		<div class="btn_wrap">
			<div class="btn_wrap_pd">
				<a href="javascript:createMenu();" class="btn btn_submit mr10">获取用户列表</a>
			</div>
		</div>
	</div>
</form>
<script>
	function createMenu() {
		if (confirm("确定要获取用户列表吗？")) {
			$.ajax({
				url : '${root!}/wxuser/getUserList',
				dataType : 'json',
				success : function(j) {
					alert(j.msg);
					if(j.success){
						window.location.reload();
					}
				}
			});
		}
	}
</script>
</@layout>
