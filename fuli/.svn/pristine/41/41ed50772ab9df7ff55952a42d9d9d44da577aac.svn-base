package net.loyin.model.sys;

import java.util.List;

import net.loyin.jfinal.anatation.TableBind;

import com.jfinal.plugin.activerecord.Model;
/**
 *微信菜单详情
 * @author 龙影
 */
@TableBind(name="sp_wx_menudetail",pk="ID")
public class WxmenuDetail extends Model<WxmenuDetail> {
	private static final long serialVersionUID = -951390655263235556L;
	public static String tableName="sp_wx_menudetail";
	public static final WxmenuDetail dao=new WxmenuDetail();
	/**提过keywd查询*/
	public List<WxmenuDetail> qryByKeywd(String keywd){
		return this.find("select * from "+tableName+" where keywd=? order by ",keywd);
	}
}
