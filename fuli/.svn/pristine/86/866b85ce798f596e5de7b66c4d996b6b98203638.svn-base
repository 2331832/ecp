<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="ehcache.xsd"
         updateCheck="true" monitoring="autodetect"
         dynamicConfig="true">
<!--     <diskStore path="java.io.tmpdir"/> -->
<diskStore path="D:/temp/ehcach"/>
    <defaultCache
           maxEntriesLocalHeap="10000"
           eternal="false"
           overflowToDisk="true"
           timeToIdleSeconds="20"
           timeToLiveSeconds="60">
    </defaultCache>
<cache name="oneday" maxEntriesLocalHeap="20" eternal="false" overflowToDisk="true" timeToIdleSeconds="200" timeToLiveSeconds="86400"></cache>
<!-- module -->
    <cache name="module"
           maxElementsInMemory="1"
           eternal="true" />

    <cache name="moduleList"
           maxElementsInMemory="1"
           eternal="true" />

    <!-- topic -->
    <cache name="topic"
           maxElementsInMemory="1000"
           eternal="false"
           timeToIdleSeconds="10800"
           timeToLiveSeconds="10800"
           overflowToDisk="true"
           diskSpoolBufferSizeMB="10" />

    <cache name="topicPageForIndex"
           maxElementsInMemory="300"
           eternal="false"
           timeToIdleSeconds="10800"
           timeToLiveSeconds="10800"
           overflowToDisk="true"
           diskSpoolBufferSizeMB="10" />

    <cache name="topicPageForModule"
           maxElementsInMemory="300"
           eternal="false"
           timeToIdleSeconds="10800"
           timeToLiveSeconds="10800"
           overflowToDisk="true"
           diskSpoolBufferSizeMB="10" />

    <cache name="hotTopicPage"
           maxElementsInMemory="300"
           eternal="false"
           timeToIdleSeconds="10800"
           timeToLiveSeconds="10800"
           overflowToDisk="true"
           diskSpoolBufferSizeMB="10" />

    <cache name="niceTopicPage"
           maxElementsInMemory="100"
           eternal="false"
           timeToIdleSeconds="10800"
           timeToLiveSeconds="10800"
           overflowToDisk="true"
           diskSpoolBufferSizeMB="10" />


    <!-- post -->
    <cache name="post"
           maxElementsInMemory="3000"
           eternal="false"
           timeToIdleSeconds="10800"
           timeToLiveSeconds="10800"
           overflowToDisk="true"
           diskSpoolBufferSizeMB="10" />

    <cache name="postPage"
           maxElementsInMemory="800"
           eternal="false"
           timeToIdleSeconds="10800"
           timeToLiveSeconds="10800"
           overflowToDisk="true"
           diskSpoolBufferSizeMB="10" />

    <!-- reply -->
    <cache name="reply"
           maxElementsInMemory="3000"
           eternal="false"
           timeToIdleSeconds="10800"
           timeToLiveSeconds="10800"
           overflowToDisk="true"
           diskSpoolBufferSizeMB="10" />

    <cache name="replyPage"
           maxElementsInMemory="800"
           eternal="false"
           timeToIdleSeconds="10800"
           timeToLiveSeconds="10800"
           overflowToDisk="true"
           diskSpoolBufferSizeMB="10" />
</ehcache>
